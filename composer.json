{
  "name": "attentus/attentus-wp",
  "type": "project",
  "license": "MIT",
  "description": "attentus WP is a Bedrock-based boilerplate for WOrdPress with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://www.attentus.com",
  "authors": [
    {
      "name": "Kolja Nolte",
      "email": "nolte@attentus.com",
      "homepage": "https://www.attentus.com"
    }
  ],
  "support": {
    "issues": "https://gitlab.com/attentus/intern/attentus-wp/-/issues",
    "wiki": "https://gitlab.com/attentus/intern/attentus-wp/-/wikis/home"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require": {
    "composer/installers": "^1.10",
    "oscarotero/env": "dev-master",
    "php": ">=7.4",
    "roots/bedrock-autoloader": "^1.0",
    "roots/soil": "^4",
    "roots/wordpress": "^5",
    "roots/wp-config": "dev-master",
    "roots/wp-password-bcrypt": "dev-master",
    "timber/timber": "^2",
    "twbs/bootstrap": "^5",
    "vlucas/phpdotenv": "^5",
    "wordpress-premium/advanced-custom-fields-pro": "^5.9",
    "wordpress-premium/backupbuddy": "^8",
    "wordpress-premium/font-awesome-pro": "dev-master",
    "wordpress-premium/wpseo-premium": "^16",
    "wpackagist-plugin/wordpress-seo": "^16"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "wpackagist-plugin/theme-check": "dev-trunk",
    "wpackagist-plugin/debug-bar": "dev-trunk",
    "kint-php/kint": "dev-master",
    "thaikolja/debug-bar-timber": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "roots/soil",
        "wordpress-premium/advanced-custom-fields-pro"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-install-cmd": [
      "python3 ./scripts/post-install.py"
    ],
    "post-update-cmd": [
      "python3 ./scripts/post-update.py"
    ],
    "post-root-package-install": [
      "python3 ./scripts/post-install.py"
    ],
    "test": [
      "phpcs"
    ]
  }
}
